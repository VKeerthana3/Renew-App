<%- include("../partials/header")%>

<h2>
	Edit Product <%= pro.id%>
</h2>

<form action="/products/<%= pro._id%>?_method=PUT" method="POST">
<div class="row">
	<div class="form-group col-lg-6">
		<label for="name">Name</label>
		<input id="name" class="form-control" type="text" value="<%= pro.name%>" name="products[name]">
	</div>
	</div>
	
	
	<div class="row">
	<div class="form-group col-lg-6">
		<label for="price">Price</label>
		<input id="price" type="number" class="form-control" value="<%= pro.price%>" name="products[price]">
		</div>
	</div>
	
	<div class="row">
	<div class="form-group col-lg-6">
		<label for="stock">Stock</label>
		<input id="stock" type="number" class="form-control" value="<%= pro.stock%>" name="products[stock]">
	</div>
	</div>
	
	<div>
		
	<div class="form-group">
		<label for="renew">Renew</label>
		<input id="renew" type="text" name="products[renew]" value="<%= pro.renew%>">
	</div>
		
	</div>
	
	<div class="row">
	<div class="form-group col-lg-6">
		<label for="renewDate">Renew Date</label>
		<input id="renewDate" class="form-control" type="date" value="<%= pro.renewDate%>" name="products[renewDate]">
	</div>
	</div>
	
	<button>
		Submit
	</button>
	</form>


<%- include("../partials/footer")%>