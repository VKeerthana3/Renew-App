<%- include("../partials/header")%>

<h2>
	Edit Sales Person 
</h2>

<form action="/sales/<%= sale._id%>?_method="PUT" method="POST" >
	<div class="row">
		<div class="form-group col-lg-6">
		<label for="name">Name: </label>
	<input class="form-control" id="name" type="String" value="<%= sale.name%>" name="sales[name]">
			</div>
	</div>
		
	<div class="row">
		<div class="form-group col-lg-6">
	<label for="phone">Phone: </label>
	<input class="form-control" id="phone" value="<%= sale.phone%>" type="String" placeholder="phone" name="sales[phone]">
		</div>
	</div>
	
	<div class="row">
		<div class="form-group col-lg-6">
	<label for="email">Email: </label>
	<input class="form-control" id="email" value="<%= sale.email%>" type="String" placeholder="email" name="sales[email]">
		</div>
	</div>
	
	<button class="btn btn-success">
		Submit
	</button>
</form>

<%- include("../partials/footer")%>
