<%- include("partials/header")%>

<h2>
	Products
</h2>

<div class="form-group">
<a href="/products/new" class="btn btn-primary">Add New Product</a>
</div>

<% products.forEach(function(products){ %>

<div class="thumbnail col-lg-4">
<div>
	Id: <%= products.id%>
</div>

<div>
	Name: <%= products.name%>
</div>

<div>
	Price: <%= products.price%>
</div>

<div>
	Stock: <%= products.stock%>
</div>

<div>
	Renew: <%= products.renew%>
</div>

<div>
	<% if(products.renewDate !== null){ %>
	Renew Date: <%= products.renewDate.toDateString()%>
	<% } %>
</div>
<div>
	<a href="/products/<%=products._id%>">Read More</a>
</div>
</div>

<% }) %>



<%- include("partials/footer")%>










